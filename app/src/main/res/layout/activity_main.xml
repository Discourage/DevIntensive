<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/stats_layout"
                android:layout_weight="1">

                <TextView
                    style="@style/stats_text.rate"
                    android:text="0"/>

                <TextView
                    style="@style/stats_text"
                    android:text="@string/rate_statistic"/>

            </LinearLayout>

            <View style="@style/view.vertical"/>

            <LinearLayout
                style="@style/stats_layout"
                android:layout_weight="2">

                <TextView
                    style="@style/stats_text.rate"
                    android:text="1000"/>

                <TextView
                    style="@style/stats_text"
                    android:text="@string/string_statistic"/>

            </LinearLayout>

            <View style="@style/view.vertical"/>

            <LinearLayout
                style="@style/stats_layout"
                android:layout_weight="1">

                <TextView
                    style="@style/stats_text.rate"
                    android:text="0"/>

                <TextView
                    style="@style/stats_text"
                    android:text="@string/project_statistic"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_call_black_24dp"/>

            <LinearLayout
                style="@style/layout_vertical.settings">

                <android.support.design.widget.TextInputLayout
                    style="@style/app_text">

                    <EditText
                        android:id="@+id/mobile_et"
                        style="@style/app_text.user"
                        android:hint="@string/mobile_phone"
                        android:inputType="phone"
                        android:text="89278888888"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_perm_phone_msg_black_24dp"/>
        </LinearLayout>

        <View
            style="@style/view.settings"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_email_black_24dp"/>

            <LinearLayout
                style="@style/layout_vertical.settings">

                <android.support.design.widget.TextInputLayout
                    style="@style/app_text">

                    <EditText
                        android:id="@+id/email_et"
                        style="@style/app_text.user"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:text="devintensive@mail123.ru"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_send_black_24dp"/>
        </LinearLayout>

        <View
            style="@style/view.settings"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/vk"/>

            <LinearLayout
                style="@style/layout_vertical.settings">

                <android.support.design.widget.TextInputLayout
                    style="@style/app_text">

                    <EditText
                        android:id="@+id/vk_et"
                        style="@style/app_text.user"
                        android:hint="@string/vk_link"
                        android:inputType="textWebEditText"
                        android:text="vk.com/discourage73"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>

        <View
            style="@style/view.settings"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>

            <LinearLayout
                style="@style/layout_vertical.settings">

                <android.support.design.widget.TextInputLayout
                    style="@style/app_text">

                    <EditText
                        android:id="@+id/git_et"
                        style="@style/app_text.user"
                        android:hint="@string/repo_link"
                        android:inputType="textWebEditText"
                        android:text="https://github.com/Discourage"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <ImageView
                style="@style/icon.right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </LinearLayout>

        <View
            style="@style/view.settings"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                style="@style/layout_vertical.settings.about">

                <android.support.design.widget.TextInputLayout
                    style="@style/app_text">

                    <EditText
                        android:id="@+id/about_et"
                        style="@style/app_text.user"
                        android:hint="@string/about_user"
                        android:inputType="textMultiLine"
                        android:text="@string/about_me"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>