<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--Style for icons-->

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <!--Text in user settings-->
    <style name="app_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="app_text.user">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="stats_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/typography_regular_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="stats_text.rate">
        <item name="android:textSize">@dimen/typography_regular_24</item>
    </style>


    <!--Layout styles-->

    <style name="layout_vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
    </style>

    <style name="layout_vertical.settings">
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout_vertical.settings.about">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_huge_220</item>
    </style>

    <style name="stats_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <!--views-->
    <style name="view">
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="view.settings">
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="view.vertical">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_28</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_28</item>
    </style>
</resources>
